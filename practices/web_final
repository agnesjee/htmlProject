    <script type="text/javascript">
   
    function calculate(){

        //calculate english average marks
        var totalEnglish = 0;
        var num1 = 0;
        var englishs = document.getElementsByClassName("English");

        for(var i = 0; i < englishs.length; i++){
            if(englishs[i].value != ""){
                num1++;
                totalEnglish += Number(englishs[i].value);
            }
        }
        document.getElementsByClassName("engAvg")[0].innerHTML = (totalEnglish/num1).toFixed(1);

        //calculate math average marks
        var totalMath = 0;
        var num1 = 0;
        var maths = document.getElementsByClassName("Math");
        
        for(var i = 0; i < maths.length; i++){
            if(maths[i].value != ""){
                num1++;
                totalMath += Number(maths[i].value);
            }
        }
        document.getElementsByClassName("mathAvg")[0].innerHTML = (totalMath/num1).toFixed(1);

        //calculate history average marks
        var totalHistory = 0;
        var num1 = 0;
        var historys = document.getElementsByClassName("History");
        
        for(var i = 0; i < historys.length; i++){
            if(historys[i].value != ""){
                num1++;
                totalHistory += Number(historys[i].value);
            }
        }
        document.getElementsByClassName("hisAvg")[0].innerHTML = (totalHistory/num1).toFixed(1);

        //calculate science average marks
        var totalScience = 0;
        var num1 = 0;
        var sciences = document.getElementsByClassName("Science");
        
        for(var i = 0; i < sciences.length; i++){
            if(sciences[i].value != ""){
                num1++;
                totalScience += Number(sciences[i].value);
            }
        }
        document.getElementsByClassName("sciAvg")[0].innerHTML = (totalScience/num1).toFixed(1);

        //calculate physics average marks
        var totalPhysics = 0;
        var num1 = 0;
        var physicss = document.getElementsByClassName("Physics");
        
        for(var i = 0; i < physicss.length; i++){
            if(physicss[i].value != ""){
                num1++;
                totalPhysics += Number(physicss[i].value);
            }
        }
        document.getElementsByClassName("phyAvg")[0].innerHTML = (totalPhysics/num1).toFixed(1);


        //calculate total marks, average marks, and final grade of an individual
        var ttrs = document.getElementsByClassName("ttr");

        for(var i = 0; i < ttrs.length; i++){
            var sum = 0;

            //get each row subject's score
            var englishScore = ttrs[i].getElementsByClassName("English")[0].value;
            var mathScore = ttrs[i].getElementsByClassName("Math")[0].value;
            var historyScore = ttrs[i].getElementsByClassName("History")[0].value;
            var scienceScore = ttrs[i].getElementsByClassName("Science")[0].value;
            var physicsScore = ttrs[i].getElementsByClassName("Physics")[0].value;

            if(englishScore == "" || mathScore == "" || historyScore == "" || scienceScore == "" || physicsScore == "")
                continue;

            //calculate total marks
            sum += Number(englishScore);
            sum += Number(mathScore);
            sum += Number(historyScore);
            sum += Number(scienceScore);
            sum += Number(physicsScore);

            //calculate average marks
            var avg = (sum/5).toFixed(1);

            //calculate grade
            var grade = "";

            if(Number(englishScore) < 50 || Number(mathScore) < 50 || Number(historyScore) < 50 || Number(scienceScore) < 50 || Number(physicsScore) < 50)
                grade = "F";
            else if(avg >= 50 && avg < 60)
                grade = "D";
            else if(avg >= 60 && avg < 70)
                grade = "C";
            else if(avg >= 70 && avg < 80)
                grade = "B";
            else if(avg >= 80 && avg <= 100)
                grade = "A";

            
            ttrs[i].getElementsByClassName("total")[0].innerHTML = sum;
            ttrs[i].getElementsByClassName("avg")[0].innerHTML = avg;
            ttrs[i].getElementsByClassName("grade")[0].innerHTML = grade;

        }

    }

        

    </script>

